{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/applications.schema.json",
  "title": "Aplicativos de dispensação de medicamentos",
  "description": "Lista de aplicativos de dispensação de medicamentos, com os padrões dos identificadores de prescrição",
  "type": "object",
  "required": [
    "version",
    "applications"
  ],
  "properties": {
    "version": {
      "description": "Identificador único da versão do JSON",
      "type": "string"
    },
    "applications": {
      "description": "Lista de aplicativos",
      
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "slug",
          "homepageUrl",
          "logoUrl",
          "prescription",
          "dispense"
        ],
        "properties": {
          "name": {
            "description": "Nome do aplicativo",
            "type": "string"
          },
          "slug": {
            "description": "slug-do-aplicativo",
              "type": "string"
          },
          "homepageUrl": {
            "description": "URL do website do aplicativo",
            "type": "string",
            "format": "uri"
          },
          "logoUrl": {
            "description": "URL do logo do aplicativo. Deve ser quadrado, recomendado 50x50.",
            "type": "string",
            "format": "uri"
          },
          "prescription": {
            "type": "object",
            "required": [
              "identifiers"
            ],
            "properties": {
              "identifiers": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "object",
                  "required": [
                    "char",
                    "length"
                  ],
                  "properties": {
                    "char": {
                      "type": "object",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "description": "Tipo de caracteres aceitos",
                          "type": "string",
                          "enum": [
                            "alphabetic",
                            "numeric",
                            "alphanumeric"
                          ]
                        },
                        "valid": {
                          "description": "String com os caracteres que devem ser considerados como válidos",
                          "type": "string"
                        }
                      }
                    },
                    "length": {
                      "type": "object",
                      "required": [
                        "min",
                        "max"
                      ],
                      "properties": {
                        "min": {
                          "description": "Número mínimo de caracteres",
                          "type": "number",
                          "minimum": 1
                        },
                        "max": {
                          "description": "Número máximo de caracteres",
                          "type": "number",
                          "minimum": 1
                        }
                      }
                    },
                    "prefix": {
                      "description": "Prefixo",
                      "type": "string",
                      "minLength": 2,
                      "maxLength": 2
                    }
                  }
                }
              }
            }
          },
          "dispense": {
            "type": "object",
            "required": [
              "homepageUrl",
              "prescriptionUrl"
            ],
            "properties": {
              "homepageUrl": {
                "description": "URL do website de dispensação de medicamentos do aplicativo",
                "type": "string",
                "format": "uri"
              },
              "prescriptionUrl": {
                "description": "URL para dispensar uma determinada prescrição. Deve apresentar o coringa $PRESCRIPTION_IDENTIFIER, que será substituído pelo identificador da prescrição",
                "type": "string",
                "format": "uri"
              }
            }
          }
        }
      }
    }
  }
}